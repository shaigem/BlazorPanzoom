@page "/outside"

<Demo Title="Containment outside the parent" DemoType="GetType()">
    <div class="buttons">
        <button @onclick="OnZoomInClick">Zoom in</button>
        <button @onclick="OnZoomOutClick">Zoom out</button>
        <button @onclick="OnResetClick">Reset</button>
    </div>

    <div class="panzoom-parent" style="height: 900px">
        <Panzoom @ref="_panzoom" PanzoomOptions="@(new PanzoomOptions {Contain = Contain.Outside, StartScale = 1.5})">
            <div style="background: rgb(0, 0, 0) none repeat scroll 0 0;
                        width: 900px;
                        height: 900px;
                        border: 1px solid rgb(221, 238, 0);" @ref="@context.ElementReference" class="panzoom">
                <img style="width: 100%; height: 100%" src="awesome_tiger.svg" alt="image"/>
            </div>
        </Panzoom>
    </div>
</Demo>

@code {

    private Panzoom _panzoom;

    private async Task OnZoomInClick(MouseEventArgs args)
    {
        await _panzoom.ZoomInAsync();
    }

    private async Task OnZoomOutClick(MouseEventArgs args)
    {
        await _panzoom.ZoomOutAsync();
    }

    private async Task OnResetClick(MouseEventArgs args)
    {
        await _panzoom.ResetAsync();
    }

}